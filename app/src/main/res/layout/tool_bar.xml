<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    app:contentInsetStart="0dp"
    app:contentInsetStartWithNavigation="0dp"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/activity_gutter_margin_quarter"
            android:layout_weight="2.5"
            android:gravity="left"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <com.sa.gograb.view.AppTextView_SubTitle
                android:id="@+id/toolbar_title"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_location_pin"
                android:drawablePadding="@dimen/_5sdp"
                android:text="5th cross road, Khaleem KFâ€¦"
                android:textAllCaps="false"
                android:textAppearance="@style/MediumText"
                android:textColor="@color/semi_color"
                android:textStyle="normal"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/tool_bar_logo"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_language"
                android:visibility="visible" />

        </RelativeLayout>

    </LinearLayout>

</androidx.appcompat.widget.Toolbar>